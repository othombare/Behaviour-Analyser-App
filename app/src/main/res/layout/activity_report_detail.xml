<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ReportDetailActivity">

    <!-- Download Button (Top Right) -->
    <ImageButton
        android:id="@+id/download_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:contentDescription="Download Report"
        android:src="@drawable/ic_download" />

    <!-- Report Title (Centered Properly) -->
    <TextView
        android:id="@+id/report_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Behavioral Report"
        android:textSize="28sp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <!-- Pie Chart (Centered & Sized Properly) -->
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pie_chart"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_below="@id/report_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:visibility="gone" />

    <!-- No Data Message (Perfectly Centered) -->
    <TextView
        android:id="@+id/no_data_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="No data available for this report."
        android:textSize="23sp"
        android:visibility="visible" />

</RelativeLayout>
